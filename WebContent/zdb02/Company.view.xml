<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
		controllerName="zdb02.Company" 
		xmlns:html="http://www.w3.org/1999/xhtml"
		
		>
	<Page>
		<content>
	           <ComboBox binding="{/companyData/departments/}">
	             <items>
	                <core:Item text="{0/dept}"/>
	                <core:Item text="{1/dept}"/>
	                <core:Item text="{2/dept}"/>
	             </items>
	           </ComboBox>
	           
	           <ComboBox items="{/companyData/departments}">
	             <items>
	                <core:Item text="{dept}"/>
	             </items>
	           </ComboBox>
		</content>
	</Page>
</core:View>